{
    "$schema": "http://json-schema.org/schema",
    "$id": "http://api.investincgroup.com/schemas/news.schema.json",
    "title": "News schema", 
    "description": "Schema for storing news", 
    "type": "object", 
    "properties": {
        "meta": {
            "type": "object", 
            "properties": {
                "reading_time": {
                    "type": "number", 
                    "description": "Estimated reading time in minutes"
                }, 
                "references": {
                    "type": "array", 
                    "description": "Works cited in this article", 
                    "items": {
                        "type": "string"
                    }
                }
            }
        }, 
        "data": {
            "type": "object", 
            "properties": {
                "body": {
                    "type": "string", 
                    "description": "Body in markdown format"
                }
            }, 
            "required": ["body"]
        }
    }, 
    "required": ["meta", "data"]
}